<%= form_for(task) do |f| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% task.errors.full_messages.each do |task| %>
          <li><%= task %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= f.label :content, 'タスク'%>
  <%= f.text_field :content %>

  <%= f.label :status, 'ステータス' %>
  <%= f.select :status, [['未'], ['済']] %>
  
  <%= f.submit '保存' %>
<% end %>
